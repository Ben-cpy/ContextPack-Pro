{
  "name": "copy-context",
  "displayName": "ContextPack-Pro",
  "description": "Copy the current project context to your clipboard from VS Code.",
  "version": "0.0.4",
  "publisher": "Ben-cpy",
  "author": "Ben",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ben-cpy/ContextPack-Pro"
  },
  "bugs": {
    "url": "https://github.com/Ben-cpy/ContextPack-Pro/issues"
  },
  "keywords": [
    "context",
    "clipboard",
    "ai",
    "project",
    "snapshot",
    "copy",
    "markdown"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:copyContext.copy",
    "onCommand:copyContext.toggleTracking",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copyContext.copy",
        "title": "Copy Project Context"
      },
      {
        "command": "copyContext.toggleTracking",
        "title": "ContextPack-Pro: Add/Remove Tracking"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copyContext.toggleTracking",
          "group": "navigation@9"
        }
      ]
    },
    "configuration": {
      "title": "Copy Context",
      "properties": {
        "copyContext.sources": {
          "type": "string",
          "enum": [
            "openEditors",
            "activeOnly",
            "smart"
          ],
          "default": "smart",
          "description": "Choose which documents are included when collecting context."
        },
        "copyContext.maxFiles": {
          "type": "number",
          "default": 5,
          "description": "Maximum number of files to include in the clipboard output."
        },
        "copyContext.treeDepth": {
          "type": "number",
          "default": 3,
          "description": "Maximum depth for the generated directory tree when using the full structure mode."
        },
        "copyContext.ignoreGlobs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "**/dist/**",
            "**/out/**"
          ],
          "description": "Additional glob patterns to ignore when scanning the workspace."
        },
        "copyContext.maxChars": {
          "type": "number",
          "default": 40000,
          "description": "Maximum number of characters allowed in the clipboard payload before truncation."
        },
        "copyContext.structureMode": {
          "type": "string",
          "enum": [
            "full",
            "smart"
          ],
          "default": "smart",
          "description": "Choose between the full tree view or a smart view that expands only the most relevant files."
        }
      }
    }
  },
  "scripts": {
    "compile": "esbuild src/extension.ts --bundle --platform=node --external:vscode --outfile=out/extension.js",
    "watch": "npm run compile -- --watch",
    "build": "npm run compile",
    "lint": "tsc --noEmit",
    "test": "echo \"(可选)添加集成测试\""
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "ignore": "^7.0.5"
  }
}
